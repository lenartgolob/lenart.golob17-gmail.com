<header class="masthead">
<div class="container">
  <div class="intro-text">
    <div class="intro-lead-in">Dobrodošli!</div>
    <div class="intro-heading text-uppercase">Nepremicnine.net</div>
    <% if current_user %>
      <%= link_to("Objavi oglas", new_estate_path, class: "btn btn-primary btn-xl text-uppercase js-scroll-trigger") %>
    <% else %>
      <%= link_to("Prijava", new_user_session_path, class: "btn btn-primary btn-xl text-uppercase js-scroll-trigger") %>
    <% end %>
  </div>

</div>
</header>

<section class="bg-light page-section" id="portfolio">
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <br><br><br>
      <h1 class="section-heading text-uppercase">Najnovejše</h1>
      <br><br>
    </div>
  </div>
  <div class="row">

  <% @estates.each_with_index do |estate, index| %>

    <% break if index > 5 %>
  
    <div class="col-md-4 col-sm-6 portfolio-item">
    <a class="portfolio-link" data-toggle="modal" href="#portfolioModal1">
      <div class="portfolio-hover">
        <div class="portfolio-hover-content">
          <i class="fas fa-plus fa-3x"></i>
        </div>
      </div>
      <div class="thumbnail">
      <% (0 ... 1).each do |image| %>

        <%= link_to image_tag(estate.images[image], class: 'img-fluid imgdb'), estate %>

      <% end %>
      </div>
    </a>
    <div class="portfolio-caption">
      <h4><%= estate.ime %></h4>
      <p class="text-muted"><%= estate.kraj %>, <%= estate.lokacija %></p>
    </div>
  </div>
  
  <% end %>



  </div>
</div>
</section>



